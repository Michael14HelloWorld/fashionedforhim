        <style>
            .container {
                float: center;
                width: 100%;
                max-height: 50%;
                padding-top: 50px;
                padding-bottom: 50%;
            }
            
            body, html {
                height: 100%;
                margin: 0;
            }
            
            .bg {
                /* The image used */
                background-image: url('http://3.bp.blogspot.com/-pSWrARtCXmU/Vbmm-5qqmFI/AAAAAAAAVo0/F9RgWu_R2YU/s1600/great-nature-wallpapers-free-widescreen-2-hd-wallpapers.jpg');

                /* Full height */
                height: 100%; 

                /* Center and scale the image nicely */
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
            }
            
            .w3-quarter {
                width: 400px;
                height: 50%;
                padding: 20px;
                
            }
        </style>
    </head>
    
    <body>
        
        <div class="bg"><p style="font-size: 400%; text-align: center; padding-top: 20%; color: white; min-padding: 30px">Blog</p></div>
        
        <div class="container">
            <!--<h1 style="color: #7a7a7a; font-family: Titillium Web; font-size: 350%; text-align: center">Welcome to <em>Fashioned For Him!</em></h1>-->
            <!--<h1 style="font-size: 350%; text-align: center; float: center;">Recent Blog <em>Posts</em></h1>
            <br><br>-->
            <!--<table>-->
                
                <% @articles.reverse.each do |article| %>
                    <div class="w3-quarter">
                        <div class="panel panel-default" style="width: 300px; min-height: 300px;">
                          <div class="panel-heading">
                              <h3><%= article.title %></h3>
                              <p class="w3-opacity"><%= article.created_at.strftime("%b %d, %Y") %>  |  Comments <span class="label label-primary"><%= article.comments.count %></span> </p>
                          </div>
                          <div class="panel-body">
                              <p><%= article.text.first(250) %> ...</p>
                              <%= link_to 'Read More', article_path(article), class: 'btn btn-primary btn-block' %>
                          </div>
                        </div>
                    </div>
                <% end %>
            </table>
        </div>
        
    </body>
